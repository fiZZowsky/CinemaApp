<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TicketScanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TicketScanner"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Repertoire"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Icon="camera.svg"/>

        <ShellContent
        Title="Scanner"
        ContentTemplate="{DataTemplate local:Scanner}"
        Route="Scanner"
        Icon="scanner.svg"/>
    </TabBar>

</Shell>
