@model IEnumerable<CinemaApp.Application.CinemaApp.MovieDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="w-100">
    <div class="row justify-content-between mx-2">
    <div class="col-md-5 description-card">
        <h1 class="main-h">Explore the World of Big Screen Magic! 🎥</h1>
        <p class="main-text">Are you in the mood for some thrills that will grab you right from the start? For unforgettable moments that will remain deep in your memory? Imagine that you are in a comfortable chair in the cinema, surrounded by the smell of fresh popcorn, ready for an adventurous journey through the world of cinematography.</p>
    </div>
    <div class="col-md-7 list">
        <h1 class="text-light pt-3">Currently plaing</h1>
        <div class="slider-wrapper">
            <button id="prev-slide" class="slide-button material-symbols-rounded">
                <
            </button>
            <ul class="image-list">
                @foreach (var movie in Model)
                {
                    <li>
                        <a asp-controller="Movie" asp-action="Details" asp-route-encodedTitle="@movie.EncodedTitle" class="text-decoration-none">
                            <div>
                            <img class="image-item" src="https://via.placeholder.com/640x960" alt="Movie cover" />
                        </div>
                        <h2 class="title">@movie.Title</h2>
                        <h5 class="genre">@movie.Genre</h5>
                        </a>
                    </li>
                }
            </ul>
            <button id="next-slide" class="slide-button material-symbols-rounded">
                >
            </button>
        </div>
        <div class="slider-scrollbar">
            <div class="scrollbar-track">
                <div class="scrollbar-thumb"></div>
            </div>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cinemaapp/mainpage/mainpagescripts.js"></script>
    <link href="~/css/Home/HomeSiteStyleSheet.css" rel="stylesheet" />
}