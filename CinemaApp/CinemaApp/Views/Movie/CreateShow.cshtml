@using CinemaApp.Application.CinemaApp.Commands.CreateMovieShow;

@model CreateMovieShowCommand

<h1 class="text-light">Create New Show</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Movie/CreateShow" method="post">
            <div class="form-group mb-3">
                <label class="control-label text-light" for="MovieId">MovieId</label>
                <input class="form-control" type="number" id="MovieId" name="MovieId" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label text-light" for="HallId">HallId</label>
                <input class="form-control" type="number" id="HallId" name="HallId" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label text-light" for="StartTime">StartTime</label>
                <input class="form-control" type="datetime" id="StartTime" name="StartTime" />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
