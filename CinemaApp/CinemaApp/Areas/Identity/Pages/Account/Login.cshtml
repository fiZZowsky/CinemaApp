@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="center-content">
    <section>
        <form id="account" method="post">
            <h1>Login</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="inputbox">
                <input type="email" asp-for="Input.Email" autocomplete="username" aria-required="true" required>
                <label asp-for="Input.Email">Email</label>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="inputbox">
                <input type="password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" required>
                <label asp-for="Input.Password">Password</label>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="forget">
                <label asp-for="Input.RememberMe"><input type="checkbox" asp-for="Input.RememberMe">Remember Me</label>
                <a id="forgot-password" asp-action="ForgotPassword" asp-controller="Account">Forgot Password</a>
            </div>
            <button id="login-submit" type="submit">Log in</button>
            <div class="register">
                <p>Don't have an account <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="~/css/identity/identitystylesheet.css" rel="stylesheet" />
}
